import pygame,sys

pygame.init()


screen = pygame.display.set_mode((600,500))


def __set_title_and_images():
    pygame.display.set_caption("Attack System")

    background_image = pygame.image.load('image/white_background_for_Attack_System.jpg').convert()

    grass_image = pygame.image.load('image/grass.jpg').convert()

    screen.blit(background_image, [0, 0])
    screen.blit(grass_image,[0,0])


def __attack_start():
    while 1:
        for event in pygame.event.get():
            pygame.display.update()


__set_title_and_images()
__attack_start()
